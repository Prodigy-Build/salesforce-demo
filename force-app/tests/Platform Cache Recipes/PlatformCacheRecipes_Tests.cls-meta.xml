@isTest
private class PlatformEventRecipesTriggerHandler_Tests {
    @isTest
    static void testPlatformEventRecipesTriggerHandlerPositive() {
        Account acct = new Account(Name = 'testEvent');
        insert acct;

        Event_Recipes_Demo__e event = new Event_Recipes_Demo__e(
            Url__c = 'https://google.com',
            Title__c = 'demo.jpg',
            AccountId__c = acct.Id
        );

        Test.startTest();
        Test.setMock(EventBusMock.class, new EventBusMock());
        EventBus.publish(event);
        Test.stopTest();

        Account checkAccount = [
            SELECT Website
            FROM Account
            WHERE Id = :acct.Id
            LIMIT 1
        ];

        System.assertEquals('https://google.com', checkAccount.Website);
    }
}